<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/cancel_action_view"
              android:orientation="horizontal"
              android:layout_gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/toolbar_action_view_padding_top_bottom"
              android:paddingBottom="@dimen/toolbar_action_view_padding_top_bottom"
              android:background="@color/toolbar_action_selector">

    <ImageView
        android:id="@+id/menu_action_drawable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/toolbar_action_view_padding_left"
        android:gravity="center"
        android:src="@drawable/ic_clear_white_24dp"/>

    <TextView
        android:id="@+id/menu_action_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/toolbar_action_view_padding_left"
        android:paddingRight="@dimen/toolbar_action_view_padding_right"
        android:gravity="center"
        android:text="@string/cancel_button_text"
        android:textSize="@dimen/menu_action_view_text_size"/>
</LinearLayout>