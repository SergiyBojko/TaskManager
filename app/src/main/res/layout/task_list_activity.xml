<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/task_list_activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/background"
    tools:context=".activity.TaskListActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/task_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:layout_weight="1"
        android:scrollbars="vertical"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/new_task_button"
        app:fabSize="normal"
        android:layout_gravity="bottom|end"
        style="@style/floating_action_button"
        android:src="@drawable/ic_note_add_white_24dp"
        android:text="@string/new_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rippleColor="@color/colorAccentDark"
        app:layout_anchor="@id/task_list"
        app:layout_anchorGravity="bottom|right|end"
        app:layout_behavior="com.serhiyboiko.taskmanager.behavior.FabBehavior"/>
</android.support.design.widget.CoordinatorLayout>
