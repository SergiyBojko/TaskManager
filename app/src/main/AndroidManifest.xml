<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.serhiyboiko.taskmanager">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.TaskListActivity"/>
        <activity android:name=".activity.EditTaskActivity"/>
        <activity android:name=".activity.SettingsActivity"
                  android:parentActivityName=".activity.TaskListActivity"/>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"/>
        <receiver android:name=".broadcast_receiver.TaskAutoFinishAlarmReceiver">
            <intent-filter>
                <action android:name="com.serhiyboiko.taskmanager.AUTOFINISH_TASK" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        <receiver android:name=".broadcast_receiver.TaskAutoRepeatAlarmReceiver">
            <intent-filter>
                <action android:name="com.serhiyboiko.taskmanager.REPEAT_TASK" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
